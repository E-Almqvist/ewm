#!/bin/sh

# Keyring
eval $(gnome-keyring-daemon --start)
export SSH_AUTH_SOCK

# Keyboard layout
setxkbmap se &

# Display settings
$HOME/.screenlayout/layout.sh &

# Compositor
$HOME/.config/picom/launch &

# Background
nitrogen --restore &

# Anti sleep
xset s off &
xset -dpms &

# Loop
while true; do
	dwm > /dev/null 2>&1
done

# WM
exec dwm
